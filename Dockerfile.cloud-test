# Dockerfile for running PDD tests in Google Cloud Run
FROM continuumio/miniconda3:latest

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Infisical CLI
RUN curl -1sLf 'https://dl.cloudsmith.io/public/infisical/infisical-cli/setup.deb.sh' | bash && \
    apt-get update && \
    apt-get install -y infisical && \
    rm -rf /var/lib/apt/lists/*

# Copy environment file
COPY environment.yml* ./
COPY requirements.txt ./

# Create conda environment
RUN if [ -f environment.yml ]; then \
        conda env create -f environment.yml; \
    else \
        conda create -n pdd python=3.12 -y; \
    fi

# Initialize conda in bash
RUN conda init bash

# Copy project files
COPY . .

# Install Python dependencies in conda environment
RUN /bin/bash -c "source activate pdd && \
    pip install -r requirements.txt && \
    pip install -e ."

# Make scripts executable
RUN chmod +x scripts/*.py scripts/*.sh || true

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PDD_AUTO_UPDATE=false

# Expose port for Cloud Run
EXPOSE 8080

# Health check endpoint script
RUN echo '#!/bin/bash\necho "OK"' > /app/healthcheck.sh && chmod +x /app/healthcheck.sh

# Create entrypoint script
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
# Activate conda environment\n\
source /opt/conda/etc/profile.d/conda.sh\n\
conda activate pdd\n\
\n\
# If INFISICAL_TOKEN is set, use it to export secrets\n\
if [ -n "$INFISICAL_TOKEN" ]; then\n\
    echo "Fetching secrets from Infisical..."\n\
    export $(infisical export --format=dotenv | xargs)\n\
elif [ -n "$INFISICAL_CLIENT_ID" ] && [ -n "$INFISICAL_CLIENT_SECRET" ]; then\n\
    echo "Authenticating with Infisical using client credentials..."\n\
    infisical login --method=universal-auth \\\n\
        --client-id="$INFISICAL_CLIENT_ID" \\\n\
        --client-secret="$INFISICAL_CLIENT_SECRET"\n\
    export $(infisical export --format=dotenv | xargs)\n\
fi\n\
\n\
# Run test suite or web server based on arguments\n\
if [ "$1" = "test" ]; then\n\
    python scripts/run_all_tests_with_results.py\n\
elif [ "$1" = "server" ]; then\n\
    # Simple HTTP server for Cloud Run health checks and triggering\n\
    python -m http.server 8080\n\
else\n\
    exec "$@"\n\
fi\n\
' > /app/entrypoint.sh && chmod +x /app/entrypoint.sh

ENTRYPOINT ["/app/entrypoint.sh"]
CMD ["server"]

