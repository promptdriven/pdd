# .pddrc - PDD Configuration for Project File Structure
version: "1.0"
contexts:
  default:
    defaults:
      generate_output_path: "src/edit_file_tool/"
      test_output_path: "src/tests/"
      example_output_path: "src/examples/"
      default_language: "python"
      target_coverage: 10.0
      strength: 0.5