{
  "name": "prompt-highlighter",
  "displayName": "Prompt Driven Development",
  "description": "Syntax highlighting for .prompt files in VS Code and OpenVSX-compatible IDEs (Promptâ€‘Driven Development, AI prompts)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "contributes": {
    "languages": [
      {
        "id": "prompt",
        "aliases": [
          "PDD Prompt",
          "prompt",
          "Prompt",
          "pdd",
          "PromptDriven",
          "Prompt-Driven Development",
          "prompt driven development",
          "Prompt Engineering",
          "AI Prompt",
          "LLM Prompt"
        ],
        "extensions": [
          ".prompt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "prompt",
        "scopeName": "text.prompt",
        "path": "./syntaxes/prompt.tmLanguage.json"
      }
    ]
  },
  "repository": {
    "type": "git",
