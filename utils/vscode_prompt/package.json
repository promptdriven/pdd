{
  "name": "prompt-highlighter",
  "displayName": "prompt",
  "description": "For proper highlighting of .prompt files forPrompt Driven Development",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "prompt",
      "aliases": ["PDD Prompt", "prompt"],
      "extensions": [".prompt"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "prompt",
      "scopeName": "text.prompt",
      "path": "./syntaxes/prompt.tmLanguage.json"
    }]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/promptdriven/pdd.git",
    "directory": "prompt"
  },
  "publisher": "prompt-driven",
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "icon": "images/icon.png"
}
