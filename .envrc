# Scoped env for the pdd subrepo only

# Load local .env if present (API keys, etc.)
dotenv_if_exists .env

# Ensure Python imports resolve to this repo package, not a parent namespace
unset PYTHONPATH
export PYTHONPATH="$(pwd):$(pwd)/pdd${PYTHONPATH:+:$PYTHONPATH}"

# Optional: expose PDD_PATH to point at the inner package root
export PDD_PATH="$PWD/pdd"

