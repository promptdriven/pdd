{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PDD CLI: Generate",
            "type": "debugpy",
            "request": "launch",
            "module": "pdd.cli",
            "console": "integratedTerminal",
            "args": [
                "--force",
                "--strength",
                "0.5",
                "--temperature",
                "0.0",
                "--output-cost",
                "/Users/gregtanaka/pdd/staging/regression/regression_cost.csv",
                "auto-deps",
                "--output",
                "/Users/gregtanaka/pdd/staging/regression/auto_deps_get_extension_python.prompt",
                "--csv",
                "project_dependencies.csv",
                "/Users/gregtanaka/pdd/prompts/get_extension_python.prompt",
                "/Users/gregtanaka/pdd/context/*.py"
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [ ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/pdd:${env:PYTHONPATH}"
            }
        },
        {
            "name": "Python: Run Script after Code Generation",
            "type": "python",
            "request": "launch",
            "program": "utils/done.py",  // Or specify a particular script if needed
            "preLaunchTask": "Generate Code",  // This matches the label in tasks.json
            "args": [
                // Add any additional arguments for the script execution here
            ],
            "console": "integratedTerminal"
        }
    ]
}