{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PDD CLI: Fix Loop",
            "type": "debugpy",
            "request": "launch",
            "module": "pdd.cli",
            "console": "integratedTerminal",
            "args": [
                "--strength",
                "0.575",
                "--verbose",
                "fix",
                "--output-test",
                "tests/test_fix_error_loop.py",
                "--output-code",
                "pdd/fix_error_loop.py",
                "--loop",
                "--verification-program",
                "context/fix_error_loop_example.py",
                "prompts/fix_error_loop_python.prompt",
                "pdd/fix_error_loop.py",
                "tests/test_fix_error_loop.py",
                "loop_error.log"
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [ ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/pdd:${env:PYTHONPATH}"
            }
        },
        {
            "name": "Python: Run Script after Code Generation",
            "type": "python",
            "request": "launch",
            "program": "utils/done.py",  // Or specify a particular script if needed
            "preLaunchTask": "Generate Code",  // This matches the label in tasks.json
            "args": [
                // Add any additional arguments for the script execution here
            ],
            "console": "integratedTerminal"
        }
    ]
}