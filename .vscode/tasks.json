{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Code",
            "type": "shell",
            "command": "pdd",
            "args": [
                "--strength", "1",
                "--force",
                "generate",
                "--output", "pdd/",   // Add any custom arguments here
                "${file}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}